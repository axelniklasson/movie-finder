<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1" android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="1" android:layout_marginTop="15dp">
        <ImageView
                android:layout_width="151dp"
                android:layout_height="201dp"
                android:id="@+id/posterImageView" android:layout_gravity="left" android:background="@drawable/ic_launcher"
                android:adjustViewBounds="false"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">
            <TextView
                    android:id="@+id/title"
                    android:layout_width="250dp"
                    android:layout_height="90dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="50dp"
                    android:text="[Title]" android:layout_marginLeft="15dp"/>
            <TextView
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:textSize="30dp" android:gravity="center_vertical" android:layout_gravity="center"
                    android:id="@+id/description" android:layout_marginLeft="15dp" android:text="[Tagline]"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:weightSum="1">
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:isIndicator="true"
                android:focusable="false"
                android:id="@+id/ratingBar" android:layout_weight="0.13" android:numStars="5"
                android:layout_marginTop="15dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="347dp"
                android:layout_height="49dp">
            <TextView
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="bottom" android:id="@+id/release_year"
                    android:text="[Release year]"/>
            <TextView
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/popularity" android:gravity="bottom"
                    android:text="[Popularity]"/>
        </LinearLayout>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watch Trailer"
                android:id="@+id/trailer"
                android:layout_weight="0.13"/>
    </LinearLayout>
</LinearLayout>